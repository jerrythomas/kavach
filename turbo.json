{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    ".prettierignore",
    ".env.*"
  ],
  "tasks": {
    "clean": {},
    "prepublishOnly": {},
    "build": {
      "cache": false,
      "dependsOn": [
        "test:ci",
        "clean"
      ],
      "outputs": [
        ".svelte-kit/**",
        "dist/**"
      ]
    },
    "test:ci": {
      "outputs": [],
      "dependsOn": [
        "lint"
      ]
    },
    "coverage": {
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": [],
      "dependsOn": [
        "format"
      ]
    },
    "format": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "release": {
      "dependsOn": [
        "test:ci",
        "clean"
      ]
    },
    "upgrade": {}
  }
}
