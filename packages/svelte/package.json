{
	"name": "@kavach/svelte",
	"version": "1.0.0-next.9",
	"description": "Drop in security for web apps.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/jerrythomas/kavach",
		"directory": "packages/kavach"
	},
	"prettier": "@jerrythomas/prettier-config",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"upgrade": "pnpm upgrade --latest && pnpm test:ci"
	},
	"devDependencies": {
		"@jerrythomas/prettier-config": "^1.0.0",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@testing-library/svelte": "^4.0.3",
		"@vitest/coverage-v8": "^0.34.5",
		"@vitest/ui": "~0.34.5",
		"c8": "^8.0.1",
		"eslint-config-svelte": "workspace:*",
		"js-yaml": "^4.1.0",
		"jsdom": "^22.1.0",
		"shared-config": "workspace:*",
		"svelte": "^4.2.1",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "~0.34.5"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./types/index.d.ts",
			"import": "./src/index.js"
		}
	},
	"dependencies": {
		"@kavach/cookie": "workspace:*",
		"@kavach/core": "workspace:*",
		"@kavach/deflector": "workspace:*",
		"@kavach/logger": "workspace:*",
		"@rokkit/molecules": "1.0.0-next.50",
		"@rokkit/organisms": "1.0.0-next.50",
		"ramda": "^0.29.0"
	}
}
