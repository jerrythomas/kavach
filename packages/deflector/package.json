{
	"name": "@kavach/deflector",
	"version": "1.0.0-next.16",
	"description": "A deflector for role based route handling",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"keywords": [
		"deflector",
		"routes",
		"routing",
		"role based routing"
	],
	"main": "index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/jerrythomas/kavach",
		"directory": "packages/deflector"
	},
	"prettier": "@jerrythomas/prettier-config",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"upgrade": "pnpm upgrade --latest && pnpm test:ci",
		"release": "pnpm publish --access public"
	},
	"dependencies": {
		"@kavach/logger": "workspace:*",
		"ramda": "^0.29.1"
	},
	"devDependencies": {
		"@jerrythomas/prettier-config": "^1.0.0",
		"@types/node": "^20.10.7",
		"@vitest/coverage-v8": "^1.1.3",
		"@vitest/ui": "~1.1.3",
		"shared-config": "workspace:*",
		"typescript": "^5.3.3",
		"vite": "^5.0.11",
		"vitest": "1.1.3"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js",
			"svelte": "./src/index.js"
		}
	}
}
