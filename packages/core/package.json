{
  "name": "@kavach/core",
  "version": "1.0.0-next.26",
  "description": "Core utility functions for Kavach.",
  "author": "Jerry Thomas <me@jerrythomas.name>",
  "license": "MIT",
  "main": "index.js",
  "module": "src/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerrythomas/kavach",
    "directory": "packages/core"
  },
  "prettier": "@jerrythomas/prettier-config",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "tsc",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "upgrade": "pnpm upgrade --latest && pnpm test:ci",
    "release": "pnpm publish --access public"
  },
  "dependencies": {
    "@kavach/cookie": "workspace:*",
    "@kavach/hashing": "workspace:*",
    "@kavach/logger": "workspace:*",
    "ramda": "^0.29.1"
  },
  "devDependencies": {
    "@jerrythomas/prettier-config": "^1.0.2",
    "@types/node": "^20.12.13",
    "@vitest/coverage-istanbul": "^1.6.0",
    "@vitest/ui": "~1.6.0",
    "eslint-config-shared": "workspace:*",
    "jsdom": "^24.1.0",
    "shared-config": "workspace:*",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vitest": "1.6.0"
  },
  "exports": {
    "./package.json": "./package.json",
    "./provider.css": "./src/provider.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.js",
      "svelte": "./src/index.js"
    }
  }
}
