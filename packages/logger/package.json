{
	"name": "@kavach/logger",
	"version": "1.0.0-next.9",
	"description": "A logger for use on UI and backend.",
	"author": "Jerry Thomas <me@jerrythomas.name>",
	"license": "MIT",
	"keywords": [
		"logger",
		"logging"
	],
	"main": "index.js",
	"svelte": "src/index.js",
	"module": "src/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/jerrythomas/kavach",
		"directory": "packages/logger"
	},
	"prettier": "@jerrythomas/prettier-config",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "tsc",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"test:ci": "vitest run",
		"test:ui": "vitest --ui",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"upgrade": "pnpm upgrade --latest && pnpm test:ci"
	},
	"devDependencies": {
		"@jerrythomas/prettier-config": "^1.0.0",
		"@types/node": "^20.7.0",
		"@vitest/coverage-c8": "^0.33.0",
		"@vitest/coverage-v8": "^0.34.5",
		"@vitest/ui": "~0.34.5",
		"c8": "^8.0.1",
		"eslint-config-library": "workspace:*",
		"shared-config": "workspace:*",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "0.34.5"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js"
		}
	}
}
